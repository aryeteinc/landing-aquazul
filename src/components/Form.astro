<div class="
    absolute 
    top-5 
    right-32 
    w-full 
    max-w-sm 
    mx-auto 
    mt-6 
    bg-white 
    border 
    rounded-md 
    dark:border-sky-700 
    focus-within:border-blue-400 
    focus-within:ring 
    focus-within:ring-blue-300 
    dark:focus-within:border-blue-300 
    focus-within:ring-opacity-40 
    glassmorphism" >
    <div class="p-4 py-6 rounded-lg md:p-8" >
        <form>
            <div class="-mx-2 md:items-center md:flex">
                <div class="flex-1 px-2">
                    <label class="block mb-2 text-sm text-gray-100 dark:text-gray-100">First Name</label>
                    <input type="text" placeholder="John " class="block w-full px-5 py-2.5 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-lg dark:placeholder-gray-400 dark:bg-aqblue dark:text-gray-300 dark:border-aqblue focus:border-blue-400 dark:focus:border-blue-400 dark:focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40 glassmorphism" />
                </div>

                <div class="flex-1 px-2 mt-4 md:mt-0">
                    <label class="block mb-2 text-sm text-gray-100 ">Last Name</label>
                    <input type="text" placeholder="Doe" class="block w-full px-5 py-2.5 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-lg dark:placeholder-gray-400 dark:bg-aqblue dark:text-gray-300 dark:border-aqblue focus:border-blue-400 dark:focus:border-blue-400 dark:focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40 glassmorphism" />
                </div>
            </div>

            <div class="mt-4">
                <label class="block mb-2 text-sm text-gray-100 ">Email address</label>
                <input type="email" placeholder="johndoe@example.com" class="block w-full px-5 py-2.5 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-lg dark:placeholder-gray-400 dark:bg-aqblue dark:text-gray-300 dark:border-aqblue focus:border-blue-400 dark:focus:border-blue-400 dark:focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40 glassmorphism" />
            </div>

            <div class="w-full mt-4">
                <label class="block mb-2 text-sm text-gray-100 ">Message</label>
                <textarea class="block w-full h-32 px-5 py-2.5 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-lg md:h-56 dark:placeholder-gray-400 dark:bg-aqblue dark:text-gray-300 dark:border-aqblue focus:border-blue-400 dark:focus:border-blue-400 dark:focus:ring-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40 glassmorphism" placeholder="Message"></textarea>
            </div>

            <button class="w-full px-6 py-3 mt-4 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-aqlogo rounded-lg hover:bg-sky-700 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50">
                Send message
            </button>
        </form>
    </div>
    
</div>


<style>
    .glassmorphism{
        background: rgba( 255, 255, 255, 0.25 );
        box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
        backdrop-filter: blur( 4px );
        -webkit-backdrop-filter: blur( 4px );
        border-radius: 10px;
        border: 1px solid rgba( 255, 255, 255, 0.18 );
    }

</style>